{
  "extends": "../../tslint.json",
  "rules": {
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration"
    ],
    "directive-selector": [
      true,
      [ "element", "attribute" ],
      "lflt",
      "kebab-case"
    ],
    "component-selector": [
      true,
      "element",
      "lflt",
      "kebab-case"
    ]
  }
}
